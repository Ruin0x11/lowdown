<ul id="subnav" class="selfclear">
  <li><%= link_to 'New Provider', new_provider_path, :class => :add if current_user.is_admin %></li>
</ul>
<div id="page-header">
  <h1>Listing Providers</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Short Name</th>
    <th>Type</th>
    <th>Agency</th>
    <th>Branch</th>
    <th>Subcontractor</th>
    <th/>
  </tr>
  <% @providers.each do |provider| %>
    <tr>
      <td><%= link_to provider.to_s, edit_provider_path(provider) %></td>
      <td><%= provider.short_name %></td>
      <td><%= provider.provider_type %></td>
      <td><%= provider.agency %></td>
      <td><%= provider.branch %></td>
      <td><%= provider.subcontractor %></td>
      <td><%= link_to "Delete", provider_url(provider), :class => "delete", :method => "delete", :confirm => "Are you sure you want to delete this provider?" if current_user.is_admin && provider.allocations.empty? %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @providers %>

