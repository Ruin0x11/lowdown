<div id="page-header">
  <h1>Listing providers</h1>
</div>

<table>

<% @providers.each do |provider| %>
  <tr>
    <td><%= link_to provider.name, edit_provider_path(provider) %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @providers %>

<%= link_to 'New Provider', new_provider_path, :class => "action-bttn" if current_user.is_admin %>