<ul id="subnav" class="selfclear">
  <li><%= link_to 'New Funding Source', new_funding_source_path, :class => :add if current_user.is_admin %></li>
</ul>
<div id="page-header">
  <h1>Listing Funding Sources</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @funding_sources.each do |funding_source| %>
    <tr>
      <td><%= link_to funding_source.name, edit_funding_source_path(funding_source) %></td>
      <td><%= link_to "Delete", funding_source_url(funding_source), :class => "delete", :method => "delete", :confirm => "Are you sure you want to delete this funding source?" if current_user.is_admin && funding_source.projects.empty? %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @funding_sources %>
