<ul id="subnav" class="selfclear">
  <li><%= link_to 'New Provider', new_trimet_provider_path, :class => :add if current_user.is_admin %></li>
</ul>
<div id="page-header">
  <h1>Listing TriMet Providers</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>TriMet Identifier</th>
    <th></th>
  </tr>

  <% @trimet_providers.each do |trimet_provider| %>
    <tr>
      <td><%= link_to trimet_provider.name, edit_trimet_provider_path(trimet_provider) %></td>
      <td><%= trimet_provider.trimet_identifier %></td>
      <td><%= link_to "Delete", trimet_provider_url(trimet_provider), :class => "delete", :method => "delete", data: { confirm: "Are you sure you want to delete this provider?" } if current_user.is_admin && trimet_provider.allocations.empty? %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @trimet_providers %>

