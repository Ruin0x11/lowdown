<ul id="subnav" class="selfclear">
  <li><%= link_to 'New Flex Report Categories', new_report_category_path, :class => :add if current_user.is_admin %></li>
</ul>
<div id="page-header">
  <h1>Listing Flex Report Categories</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @report_categories.each do |report_category| %>
    <tr>
      <td><%= link_to report_category.name, edit_report_category_path(report_category) %></td>
      <td><%= link_to "Delete", report_category_url(report_category), :class => "delete", :method => "delete", :confirm => "Are you sure you want to delete this category?" if current_user.is_admin && report_category.flex_reports.empty? %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @report_categories %>
