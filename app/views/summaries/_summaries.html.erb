         <h2 id="result-count"><%= @summaries.total_entries %> summaries found.</h2>
      <% if @summaries.total_entries > 0 %>
         <%= link_to 'Mark all as complete', :action=>:bulk_update, "query[period_start]" => params[:query][:period_start], "query[period_end]" => params[:query][:period_end], "query[allocation]" => params[:query][:allocation] %>
 <div class="report-wrapper">
         <table id="summary-results">
           <thead>
             <tr>
               <th>Allocation</th>
               <th>Start</th>
               <th>Complete</th>
               <th>Last updated</th>
               <th>&nbsp;</th>
             </tr>
           </thead>
           <tbody>
             <% @summaries.each do |summary| %>
             <tr>
               <td><%= summary.allocation.name %></td>
               <td><%= summary.period_start.month %> / <%= summary.period_start.year %></td>
               <td><span class="status-<%= (summary.complete) ? "" : "in" %>complete"><%= summary.complete %></span></td>
               <td><%= summary.valid_start.to_s(:pretty) %></td>
               <td><%= link_to 'Details', :action=>:show_update, :id=>summary.id %></td>
             </tr>
             <% end %>
           </tbody>
         </table>
</div>
       <% end %>
<%= will_paginate @summaries %>
