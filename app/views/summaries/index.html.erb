<div id="page-header">
  <h1>View Summaries</h1>
</div>

<%= form_for @query, :html=>{:id=>"summary-filter", :method=>:get}, :url=>{:action=>:index} do |f| %>
  <fieldset>
    <h2>Summary Period</h2>
    <ol class="section fourth">
      <li><label>Start Date:</label> <%= f.date_select( :period_start, :end_year => Date.today.year, :order => [:month, :year] ) %></li>
      <li><label>End Date:</label> <%= f.date_select( :period_end, :end_year => Date.today.year, :order => [:month, :year] ) %></li>

      <li>
        <h2>Allocations</h2>
        <%= f.collection_select :allocation, @allocations, :id, :name, :include_blank => true %>
      </li>
    </ol>

    <div class="actions">
      <input id="summary-search" type="submit" value="Search" />
    </div>

  </fieldset>
<% end %> 

<%= render "summaries" %>
