<%= form_for(@service_type) do |form| %>
  <%= render "shared/error_messages", :target => @service_type %>
  
  <fieldset>
    <ol class="section ">
      <li class="selfclear">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </li>
    </ol>
    
    <% if current_user.is_admin %>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </fieldset>
<% end %>
