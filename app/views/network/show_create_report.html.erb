        <h1>Create Report</h1>
        <%= form_for @query, :as => :q, :html=>{:id=>"create-report", :method=>:get}, :url=>{:action=>"report"} do |f| %>
          <div class="ui-widget">
             Report on
             <span id="report-category-wrap">
               <%= f.collection_select :tag, @tags, :name, :name, :include_blank=>"all" %>
           	</span>
           	service between the beginning of
	           <span id="startday-wrap"><%= f.date_select :start_date, :discard_day=>true %></span>
           	and just before the beginning of
           	<span id="endday-wrap"><%= f.date_select :end_date, :discard_day=>true %></span>

		

          </div>
          <div class="ui-widget">
            <h3 id="report-checkbox-toggle" class="toggler collapse">Fields to include</h3>
            <div id="report-checkbox-area" class="togglee">
              <fieldset class="selfclear">
                <!-- PLEASE NOTE: These fields are currently in the order they appear on the report. We may decide to present them in some other order (like alphabetical), but the current approach isn't random -->
                <div class="fourcol">
                  <input type="checkbox" checked name="q[f[funds]]" id="funds" value="1" /><label for="funds">Funds</label><br />
                  <input type="checkbox" checked name="q[f[fares]]" id="fares" value="1" /><label for="fares">Fares</label><br />
                  <input type="checkbox" checked name="q[f[agency_other]]" id="agency_other" value="1" /><label for="agency_other">Agency Other</label><br />
                  <input type="checkbox" checked name="q[f[vehicle_maint]]" id="vehicle_maint" value="1" /><label for="vehicle_maint">Vehicle Maint.</label><br />
                  <input type="checkbox" checked name="q[f[donations_fares]]" id="donations_fares" value="1" /><label for="donations_fares">Donations Fares</label><br />
                  <input type="checkbox" checked name="q[f[total]]" id="total" value="1" /><label for="total">Total</label>
                </div>
                <div class="fourcol">
                  <input type="checkbox" checked name="q[f[in_district_trips]]" id="in_district_trips" value="1" /><label for="in_district_trips">In District Rides</label><br />
                  <input type="checkbox" checked name="q[f[out_of_district_trips]]" id="out_of_district_trips" value="1" /><label for="out_of_district_trips">Out of District Rides</label><br />

                  <input type="checkbox" checked name="q[f[total_last_year]]" id="total_last_year" value="1" /><label for="total_last_year">Total this Period Last Year</label><br />
                  <input type="checkbox" checked name="q[f[mileage]]" id="mileage" value="1" /><label for="mileage">Mileage</label><br />
                  <input type="checkbox" checked name="q[f[driver_volunteer_hours]]" id="driver_volunteer_hours" value="1" /><label for="driver_volunteer_hours">Volunteer Hours</label>
                </div>
                <div class="fourcol">
                  <input type="checkbox" checked name="q[f[driver_paid_hours]]" id="driver_paid_hours" value="1" /><label for="driver_paid_hours">Paid Hours</label><br />
                  <input type="checkbox" checked name="q[f[driver_total_hours]]" id="driver_total_hours" value="1" /><label for="driver_total_hours">Total Hours</label><br />
                  <input type="checkbox" checked name="q[f[cost_per_trip]]" id="cost_per_trip" value="1" /><label for="cost_per_trip">Cost/Trip</label><br />
                  <input type="checkbox" checked name="q[f[cost_per_mile]]" id="cost_per_mile" value="1" /><label for="cost_per_mile">Cost/Mile</label><br />
                  <input type="checkbox" checked name="q[f[cost_per_hour]]" id="cost_per_hour" value="1" /><label for="cost_per_hour">Cost/Hour</label>
                </div>
                <div class="fourcol">
                  <input type="checkbox" checked name="q[f[turn_downs]]" id="turn_downs" value="1" /><label for="turn_downs">Turn Downs</label><br />
                  <input type="checkbox" checked name="q[f[undup_riders]]" id="undup_riders" value="1" /><label for="undup_riders">Undup Riders</label><br />
                  <input type="checkbox" checked name="q[f[escort_volunteer_hours]]" id="escort_volunteer_hours" value="1" /><label for="escort_volunteer_hours">Escort Hours</label><br />
                  <input type="checkbox" checked name="q[f[admin_volunteer_hours]]" id="admin_volunteer_hours" value="1" /><label for="admin_volunteer_hours">Admin Hours</label><br />
                  <input type="checkbox" checked name="q[f[total_volunteer_hours]]" id="total_volunteer_hours" value="1" /><label for="total_volunteer_hours">Total Hours</label>
                </div>
              </fieldset>
            </div>
          </div>
          <div class="ui-widget">
            <h3>Group By</h3>
            <div class="group-by-wrap">
              <select id="group-by" name="q[group_by]">
                <option value="county,quarter">County, Quarter</option>
                <option value="funding_source,quarter">Funding Source, Quarter</option>
                <option value="funding_source,funding_subsource,quarter">Funding Source, Funding Sub-source, Quarter</option>
                <option value="project_number,quarter">Project code, Quarter</option>
                <option value="county,agency">County, Provider</option>
                <option value="funding_source,county,agency,project_name">Funding Source, County, Provider, Project Name</option>
                <option value="funding_source,county,agency">Funding Source, County, Provider</option>
                <option value="funding_source,agency">Funding Source, Provider</option>
                <option value="project_name,agency">Project Name, Provider</option>
                <option value="agency,county,project_name">Provider, County, Project Name</option>
              </select>
            </div>
          </div>

	  <%= f.label :adjustment, :class => "checkbox" %> <%= f.check_box :adjustment %><br/>

          <input id="report-create" type="submit" value="Create Report" />
        <% end %><!-- end form -->
