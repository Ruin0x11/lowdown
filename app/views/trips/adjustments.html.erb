<div id="page-header">
  <h1>Trip Adjustment History</h1>
</div>
<%= will_paginate @adjustments %>
<table>
  <tr>
    <th>Change Date & Time</th>
    <th>Adjustment Notes</th>
    <th>Record Count</th>
    <th></th>
  </tr>
  <% for adjustment in @adjustments %>
    <tr>
      <td>
        <%= adjustment.valid_start.in_time_zone("Pacific Time (US & Canada)").strftime('%D %I:%M %p') %>
      </td>
      <td>
        <%= truncate(adjustment.adjustment_notes) %>
      </td>
      <td>
        <%= adjustment['cnt'] %>
      </td>
      <td>
        <% if adjustment['cnt'] == '1' -%>
          <%= link_to "View", {:action => :show, :id => adjustment.id}, :class => :details %>
        <% else -%>
          <%= link_to "View", {:action => :list, "trip_query[valid_start]" => adjustment.valid_start}, :class => :details %>
        <% end -%>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @adjustments %>
