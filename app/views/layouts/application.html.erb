<!DOCTYPE html>
<html>
<head>
  <title>Service Database</title>
  <%= stylesheet_link_tag "style.css", :media=>"screen" %>
  <%= stylesheet_link_tag "print.css", :media=>"print" %>
  <%= stylesheet_link_tag "jquery-ui-1.8.9.custom.css" %>

  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-ui.js" %>
  <%= javascript_include_tag "jquery-ui-timepicker-addon.js" %>
  <%= javascript_include_tag "dateFormat.js" %>

  <%= csrf_meta_tag %>
  <%= content_for?(:head) ? yield(:head) : '' %>
  <%= favicon_link_tag "favicon.ico" %>
</head>
<body class="<%= bodytag_class %>">
  <div id="header">
    <div class="wrap selfclear">
      <%= link_to "Ride Connection Service Database", root_url, :id => :logo %>
      <div id="login-area">
        <a href="https://apps.rideconnection.org/greenbook/index.php/Category:Service_Database">Help</a>
        <% if current_user %>
          | <a href="#"><%= current_user.email %></a> | <%= link_to "Log out", logout_path, {:method=>"post"} %>
        <% end %>
      </div>
    </div><!-- /.wrap -->
  </div><!-- /#header -->
  <div id="crossbar">
    <div class="wrap selfclear">             
      <ul id="primary-nav" class="selfclear">
        <li class="flex-reports"><%= link_to "Flex Reports", :controller => "flex_reports" %></li>
        <li class="predefined-reports"><%= link_to "Predefined Reports", :controller => "predefined_reports" %></li>
        <li class="summaries"><%= link_to "Summaries", :controller => "summaries" %></li>
        <li class="trips"><%= link_to "Trips", :controller => "trips" %></li>
        <li class="runs"><%= link_to "Runs", :controller => "runs" %></li>
      </ul>
      <ul id="secondary-nav" class="selfclear">
        <li class="admin"><%= link_to "Admin", :controller => "admin" %></li>
      </ul>
    </div><!-- /.wrap -->
  </div><!-- /#crossbar -->


  <div id="main">

    <div class="wrap selfclear">

      <%= raw flash_messages %>

      <%= content_for?(:menu_bar) ? yield(:menu_bar) : '' %>

      <%= yield %>

     </div><!-- /.wrap -->

  </div><!-- /#main -->

</body>
</html>
