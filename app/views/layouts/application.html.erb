<!DOCTYPE html>
<html>
<head>
  <title>Lowdown</title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'ie' %>
  <%= stylesheet_link_tag 'print-reset', :media=>"print" %>
  <%= stylesheet_link_tag 'screen-reset' %>
  <%= stylesheet_link_tag 'application' %>

  <%= javascript_include_tag 'jquery-1.4.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.6.custom.min' %>
  <%= javascript_include_tag 'ui.spinner.min' %>
  <%= javascript_include_tag 'application' %>

  <!--%= javascript_include_tag :defaults %-->

  <%= csrf_meta_tag %>
</head>
<body>

  <div id="header">
    <div class="wrap selfclear">
      <a id="logo" href="/"><strong>Low</strong>down</a>
      <div id="login-area">
        <% if current_user %>
        <a href="#"><%= current_user.name %></a> | <a href="#">Log out</a>
        <% end %>
      </div>
    </div><!-- /.wrap -->
  </div><!-- /#header -->

<%= content_for?(:menu_bar) ? yield(:menu_bar) : '' %>

   <div id="main">
     <div class="wrap selfclear">
       <%= raw flash_messages %>
       <%= yield %>
     </div><!-- /.wrap -->
   </div><!-- /#main -->
</body>
</html>
