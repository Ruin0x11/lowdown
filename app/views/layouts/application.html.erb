<!DOCTYPE html>
<html>
<head>
  <title>Lowdown</title>
  <%= stylesheet_link_tag 'style', :media=>"screen" %>
  <%= stylesheet_link_tag 'print-reset', :media=>"print" %>
  
  <%= stylesheet_link_tag 'monthpicker.css' %>
  <%= stylesheet_link_tag 'ui-custom/jquery-ui-1.8.6.custom.css' %>
  <%= stylesheet_link_tag 'ui.selectmenu.css' %>
  <%= stylesheet_link_tag 'jquery.multiselect.css' %>
  <%= stylesheet_link_tag 'ui.spinner.css' %>
  
  <%= javascript_include_tag 'jquery-1.4.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.6.custom.min' %>
  <%= javascript_include_tag 'jquery-ui-selectmenu' %>
  <%= javascript_include_tag 'jquery.multiselect.min' %>
  <%= javascript_include_tag 'ui.spinner.min' %>
  <%= javascript_include_tag 'monthpicker.min' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'application' %>

  <!--%= javascript_include_tag :defaults %-->

  <%= csrf_meta_tag %>
</head>
<body class="<%= bodytag_class %>">

  <div id="header">
    <div class="wrap selfclear">
      <a id="logo" href="/"><strong>Low</strong>down</a>
      <div id="login-area">
        <% if current_user %>
        <a href="#"><%= current_user.email %></a> | <%= link_to "Log out", logout_path, {:method=>"post"} %></a>
        <% end %>
      </div>
    </div><!-- /.wrap -->
  </div><!-- /#header -->
  <div id="crossbar">
    <div class="wrap selfclear">             
      <ul id="primary-nav" class="selfclear">
        <li class="reports"><a href="/reports/">Reports</a></li>
        <li class="summaries"><a href="/summaries/">Summaries</a></li>
        <li class="trips"><a href="/trips/">Trips</a></li>
        <li class="runs"><a href="/runs/">Runs</a></li>
        <li class="users"><a href="/users/index">Users</a></li>
      </ul>
      <ul id="secondary-nav" class="selfclear">
      </ul>
    </div><!-- /.wrap -->
  </div><!-- /#crossbar -->


  <div id="main">

    <div class="wrap selfclear">

      <%= raw flash_messages %>

      <%= content_for?(:menu_bar) ? yield(:menu_bar) : '' %>

      <%= yield %>

     </div><!-- /.wrap -->

  </div><!-- /#main -->

</body>
</html>
