<ul id="subnav" class="selfclear">
  <li><%= link_to 'New Program', new_program_path, :class => :add if current_user.is_admin %></li>
</ul>
<div id="page-header">
  <h1>Listing Programs</h1>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>TriMet Identifier</th>
    <th></th>
  </tr>

  <% @programs.each do |program| %>
    <tr>
      <td><%= link_to program.name, edit_program_path(program) %></td>
      <td><%= link_to "Delete", program_url(program), :class => "delete", :method => "delete", :confirm => "Are you sure you want to delete this program?" if current_user.is_admin && program.allocations.empty? %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @programs %>
