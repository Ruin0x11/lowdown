<div id="page-header">
  <h1>Change Password</h1>
</div>

<%= form_for @user, :url=>{:action=>:change_password} do |f| %>

<%= f.label :password %>
<%= f.password_field :password %><br/>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br/>

<%= f.submit "Update" %>

<% end %>
