<div id="page-header">
  <h1>Users</h1>
</div>

<table>
<tr>
<th>Email</th>
<th>Role</th>
</tr>
<% for user in @users %>
<tr>
<td>
<%= user.email %> 
</td>
<td>
<%= user.is_admin ? "Admin" : "User" %> 
</td>
</tr>
<% end %>
</table>

<% if current_user.is_admin %>
<hr/>

<%= link_to "New user", { :action=>"show_create" }, :class=>'action-bttn' %>
<% end %>
